# ===========================================
# BIZ-AGENT PRODUCTION CONFIGURATION
# ===========================================

# Database Configuration (PostgreSQL)
DATABASE_PROVIDER="postgresql"
DATABASE_URL="postgresql://omaluj@localhost:5432/biz_agent_prod"

# Mailjet API Configuration (REÁLNE KĽÚČE)
MAILJET_API_KEY="your_mailjet_api_key_here"
MAILJET_API_SECRET="your_mailjet_api_secret_here"
MAILJET_SENDER_EMAIL="noreply@domelia.sk"
MAILJET_SENDER_NAME="Domelia.sk - Biz Agent"

# Google Calendar API Configuration (REÁLNE KĽÚČE)
GOOGLE_CALENDAR_ID="primary"
GOOGLE_CALENDAR_CREDENTIALS_PATH="./credentials/google-calendar-credentials.json"

# Rate Limiting (PRODUCTION)
MAX_EMAILS_PER_HOUR=6
MAX_REQUESTS_PER_MINUTE=10
EMAIL_DELAY_SECONDS=600

# Logging (PRODUCTION)
LOG_LEVEL="info"
LOG_FILE="logs/biz-agent-prod.log"
LOG_MAX_SIZE="10m"
LOG_MAX_FILES=5

# App Settings (PRODUCTION)
NODE_ENV="production"
APP_PORT=3000
CRON_SCHEDULE="*/10 * * * *"
DEBUG_MODE=false
SKIP_RATE_LIMITING=false

# Security (REÁLNE KĽÚČE)
ENCRYPTION_KEY="your_32_character_encryption_key_here"
JWT_SECRET="your_jwt_secret_here"

# External APIs (REÁLNE KĽÚČE)
GOOGLE_SEARCH_API_KEY="your_google_search_api_key_here"
GOOGLE_SEARCH_ENGINE_ID="your_google_search_engine_id_here"

# Monitoring
SENTRY_DSN="your_sentry_dsn_here"
METRICS_PORT=9090
